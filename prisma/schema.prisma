generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id BigInt @id @default(autoincrement())
  roles String[] @default(["write", "read", "normal"])
  posts BigInt[] @default([])
  rooms BigInt[] @default([])
  created_at DateTime @default(now())

  password_hash String
}

model Post {
  id BigInt @id @default(autoincrement())
  created_at DateTime @default(now())
  onwer_id BigInt
  status String
  content String
}

model Room {
  id BigInt @id @default(autoincrement())
  users_list BigInt[] @default([])
  messages_list BigInt[] @default([])
  created_at DateTime @default(now())

  name String
}

model Session {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  expires_at DateTime @default(dbgenerated("now() + interval '7 day'"))
 
  user_id BigInt
}